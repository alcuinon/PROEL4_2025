@page
@model RazorPagesUI.Pages.Judging.AddContestantModel
@{
}



<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h2>Create Contestant</h2>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }
            <form method="post">
                <input class="" readonly asp-for="Contestant.Id" />
                <div class="mb-3">
                    <label for="contestantName" class="form-label">Contestant Name</label>
                    <input type="text" class="form-control" asp-for="Contestant.Name" id="contestantName" placeholder="Contestant name here" />
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>